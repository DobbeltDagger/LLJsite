  <!-- scripts -->
  <script>
    // all is loaded
    window.addEventListener("DOMContentLoaded", function() {

      // setup menu button
      const menuBtn = document.getElementById('menuBtn');
      menuBtn.addEventListener('click', function(e) {
        e.preventDefault();

        console.log("menu was clicked");
        console.log("this", this);

        // change visibility on menu
        const menuElm = document.getElementById('collapseMenuWrapper');
        
        if (menuElm.classList.contains('hidden') === true) {
          menuElm.classList.remove('hidden');
          this.classList.add('down');
        } else {
          menuElm.classList.add('hidden');
          this.classList.remove('down');
        }

      })

      var swiper = new Swiper('.swiper-container', {
        direction: 'horizontal', // 'vertical',
        loop: true,

        pagination: {
          el: '.swiper-pagination',
          type: 'fraction',
        },
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
      });

      // put class and target on external links
      linkopener(true);
    })
  </script>
